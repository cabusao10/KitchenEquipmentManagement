<Page x:Class="KitchenEquipmentManagement.WPF.Views.Equipments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KitchenEquipmentManagement.WPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Equipments">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock Foreground="White" FontWeight="DemiBold" FontSize="32">Equipments</TextBlock>
            <Button Content="Add new equipment" Width="120" Height="40" HorizontalAlignment="Right" BorderThickness="0"
         Command="{Binding AddNewSiteCommand}"
         Margin="0 0 10 0">

            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <DataGrid>
                <DataGrid.Columns>
                    <DataGridTextColumn Header=""/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
